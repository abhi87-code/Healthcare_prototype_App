<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    tools:context=".BookAppointmentActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:text="24*7 Healthcare"
        android:textAlignment="center"
        android:textColor="@color/Light_purple"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBookapp"
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:layout_marginTop="12dp"
        android:text="Book Appointment"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_primary99"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextltbookfullname"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBookapp" />

    <EditText
        android:id="@+id/editTextltbookAddress"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@drawable/baseline_local_hospital_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextltbookfullname" />

    <EditText
        android:id="@+id/editTextltbookpincode"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@drawable/baseline_call_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contact"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextltbookAddress" />

    <EditText
        android:id="@+id/editTextltbookcontact"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@drawable/baseline_attach_money_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Fees"
        android:inputType="text"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextltbookpincode" />

    <Button
        android:id="@+id/ltbookbutton"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circularbg"
        android:text="BACK"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookappbutton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bookappbutton"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/circularbg"
        android:text="Book Appointment"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonDate"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="141dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:textSize="16dp"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        android:textColor="@color/Light_yellow"
        android:textColorHint="@color/Light_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextltbookcontact" />

    <Button
        android:id="@+id/ButtonTime"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:textSize="16dp"
        android:hint="10:00"
        android:inputType="time"
        android:textColorHint="@color/Light_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextltbookcontact" />

    <TextView
        android:id="@+id/textViewbookappdate"
        android:layout_width="86dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:text="Date"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextltbookcontact" />

    <TextView
        android:id="@+id/textViewbookapptime"
        android:layout_width="86dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:text="Time"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextltbookcontact" />

</androidx.constraintlayout.widget.ConstraintLayout>