<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".BookMedicineActivity">

    <TextView
        android:id="@+id/textViewbookmedicinetitle"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:text="24*7 Healthcare"
        android:textAlignment="center"
        android:textColor="@color/Light_purple"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewbookmedicine"
        android:layout_width="407dp"
        android:layout_height="68dp"
        android:layout_marginTop="36dp"
        android:text="Please fill All Details for Bokking"
        android:textAlignment="center"
        android:textColor="@color/Yellow"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewbookmedicinetitle" />

    <EditText
        android:id="@+id/editTextbookmedicinefullname"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Fullname"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewbookmedicine" />

    <EditText
        android:id="@+id/editTextbookmedicineAddress"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextbookmedicinefullname" />

    <EditText
        android:id="@+id/editTextbookmedicinepincode"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@drawable/baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Pin Code"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextbookmedicineAddress" />

    <EditText
        android:id="@+id/editTextbookmedicinecontact"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circularbg"
        android:drawableLeft="@drawable/baseline_contact_phone_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextbookmedicinepincode" />

    <Button
        android:id="@+id/bookmedicinebutton"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/circularbg"
        android:text="Book"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextbookmedicinecontact" />

</androidx.constraintlayout.widget.ConstraintLayout>